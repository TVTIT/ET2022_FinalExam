{
  "latex-workshop.latex.recipe.default": "pdflatex",
  "latex-workshop.latex.tools": [
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "main"
      ]
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "main"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": ["pdflatex","bibtex","pdflatex"]
      //"tools": ["pdflatex"]
    }
  ]
}
